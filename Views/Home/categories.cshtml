@model Category 

<div class="row">
    <a class="col" href="/product">Products</a>
    <div class="col">|</div>
    <a class="col" href="/categories">Categories</a>
</div><br><br>
<div class="row">
    <div class="col">
        <form action="/postCategory" method="POST">
            <span asp-validation-for="Name"></span><br>
            Name:<br>
            <input asp-for="Name" type="text"><br>
            <button type="submit">Create</button>
        </form>
    </div>
    <div class="col"></div>
    <div class="col">
        @{
            foreach(Category c in ViewBag.category){
                <a href="categories/@c.CategoryId">@c.Name @c.CategoryId</a><br>
            }
        }
    </div>
</div>